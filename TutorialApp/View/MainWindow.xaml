<Window x:Class="TutorialApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TutorialApp"
        xmlns:views="clr-namespace:TutorialApp.View"
        xmlns:viewmodels="clr-namespace:TutorialApp.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding ExitAppCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="{Binding MenuWidth}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Button Content="≡" Margin="5, 5" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Command="{Binding SideMenuCommand}"/>
            <Button Content="M" Margin="5, 45" Width ="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding ChangeViewCommand}" CommandParameter="Main"/>
            <Button Content="L" Margin="5, 85" Width ="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding ChangeViewCommand}" CommandParameter="Library"/>
            <Button Content="V" Margin="5, 125" Width ="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding ChangeViewCommand}" CommandParameter="Video"/>
        </Grid>

        <Grid Grid.Column="1">
            <views:SideMenuControl />
        </Grid>

        <Grid Grid.Column="2">
            <ContentControl Content="{Binding CurrentView}"/>
        </Grid>

    </Grid>
</Window>
