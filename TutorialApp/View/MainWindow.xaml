<Window x:Class="TutorialApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TutorialApp"
        xmlns:views="clr-namespace:TutorialApp.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding ExitAppCommand}"/>
    </Window.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="{Binding MenuWidth}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Button Content="≡" FontSize="20" Margin="5, 5" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding SideMenuCommand}"/>
            <Button Content="C" Margin="5, 45" Width ="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding ClickCommand}"/>
        </Grid>

        <Grid Grid.Column="1">
            <views:SideMenuControl />
        </Grid>

        <Grid Grid.Column="2">
            <TextBlock Text="{Binding Title}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        
    </Grid>
</Window>
