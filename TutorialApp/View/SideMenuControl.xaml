<UserControl x:Class="TutorialApp.View.SideMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TutorialApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="100">
    <Grid Background="Aquamarine">
        <Button Content="Close window" Margin="5, 5" Width="90" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding CloseWindowCommand}"/>
    </Grid>
</UserControl>
